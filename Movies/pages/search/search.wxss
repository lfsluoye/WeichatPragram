.item{
	display: flex;
	align-items: center;
	flex-direction: column;
	height: 1000rpx;
	padding: 50rpx 40rpx;
	text-align: left;
	/*border: 2rpx solid #eee;*/
}
/*照片*/
.item .poster{
	width: 80%;
	height: 80%;
	margin-bottom: 20rpx;
}
/*电影名字和其他信息*/
.item .info .item .title{
	margin-bottom: 14rpx;
}
/*电影名字*/
.item .title{
	font-size: 40rpx;
}
/*其他信息*/
.item .info{

	font-size: 20rpx;
	color: #0f0f0f;
	width: 80%;
	/*margin = 30rpx;*/
}


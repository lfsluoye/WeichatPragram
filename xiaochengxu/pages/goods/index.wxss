/*index.wxss*/
/** public */ 
.titletext{
    display: flex;
    width: 100%;
    height: 50rpx;
    align-items: center; 
    font-size: 30rpx;
    color: rgba(0,0,0,0.7);
    background: url(../../images/system/goods_ioc.png) no-repeat;
    background-size: 50rpx;
    padding-left: 55rpx;
    text-align: left;
}
/* 天天特价 */
.days{
    background-position: 0 -50rpx;
}
/* 吃货秘籍 */
.eats{
    background-position: 0 -100rpx;
}
/* 精选商品 */
.selected{
    background-position: 0 -150rpx;
}
.desctxt{
    color: #666;
    overflow: hidden;
    white-space: nowrap;
    font-size: 26rpx;
}
.productimg{
    width: 100%;
    height: 260rpx;
}
.producttext{
    border: 1px solid #F3F3F3;
    font-size: 28rpx;
}
.price{
    color:red;
    font-weight: bold;
    font-size: 30rpx;
    padding: 10% 6% 6% 6%;
}
/* tabbar */
.nav-scroll{
    display: flex; 
    height: 40rpx; 
    line-height: 40rpx;
    z-index: 800;   
    max-width: 640px;
    /*border-bottom: 2px solid #F4F4F4; */
    flex-direction:row; 
    justify-content:center;
    align-items:center;
}
.scroll-view-H{
    white-space:nowrap;
    width: 100%;
    background-color: rgba(255, 255, 255, 0.7);
}
.nav-name{
    display: inline-block;
    margin: 1.8rpx;
    font-size: 32rpx;
    color: #8a8585;
    border-bottom: 2px solid transparent;
    padding: 18rpx;
}
.nav-hover{
    color: #0a0a0a;
    border-bottom: 2px solid #3aac6a;
}
/* content */
.swiper-box{
    display: flex;
    margin-top: 25rpx; 
    height: 100%; 
    width: 100%; 
    overflow: hidden; 
}
.hot-box{
    display: flex; 
    height: 100%; 
    font-family: Helvetica, Arial, "Hiragino Sans GB", "Source Han Sans CN", "PingFang SC", Roboto, 
    "微软雅黑", "Heiti SC", "Microsoft Yahei", sans-serif 
}
/* 图片轮播 */
.banner{
    width: 750rpx;
    height: 300rpx;
}
.slide-image{
    width: 100%;
    height: 300rpx;
}
.separator{
   height: 10rpx;
   width: 750rpx;
   background-color: #eee;
}
/*最热商品*/
.hot{
    display: flex; 
    justify-content: space-around;
    font-size: 28rpx;
    border-bottom: 10rpx solid #eee;
}
.hot image{
    width: 165rpx;
    height: 160rpx;
    padding: 5rpx;
} 
.hot-text{
    width: 165rpx;
    height: 80rpx;
    font-size: 28rpx;
    color: #0a0a0a;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
/*天天特价*/
.day-item{
    margin-top: 5rpx;
}
.day{
    display: flex; 
    justify-content: space-around;
    padding: 15rpx;
    border-bottom: 10rpx solid #eee;  
}
.day image{
    width: 155rpx;
    height: 160rpx;
    float: right;
    margin-top: -175rpx;
}
.name{
    display: flex;
    width: 50%;
    height: 70rpx;
    font-size: 28rpx;
    color: #0a0a0a;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
/* 吃货秘籍 */
.eat{
    display: flex;
    flex-direction: column;
    padding: 15rpx;
}
.eat image{
    width: 145rpx;
    height: 160rpx;
}
.right{
    width: 550rpx;
    height: 75rpx;
    line-height: 45rpx;
    float: right;
    font-size: 30rpx;
}
.eattext{
    color: #666;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
}
/* 二级分类 特产零食 */
.snacks{
    display: inline-block;
    width: 28.33%;
    align-items: center;
    font-size: 28rpx;
    padding: 2.5%;
    border-bottom: 10rpx solid #eee;
}
.snacks image{
    width: 95%;
    height: 260rpx;
}
/* 精选商品 */
.goods-item{
    width: 45.5%;
    display: inline-block;
    flex-direction:column;
    justify-content:center;
    box-sizing:border-box;
    margin: 3% 1.5% 3% 2.5%;
}
.goods-name{
    font-size: 28rpx;
    color: #0a0a0a;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}


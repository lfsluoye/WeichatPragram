.fff{
    background: #fff;
}
.module1{
    border-color:#ebebeb;
    border-style:solid;
    border-width:15rpx 0;
}
.header{
    padding: 15px;
}
.userPic{
    width : 100rpx;
    height: 100rpx;
    border-radius: 50%;
    vertical-align:middle;
}
.userName{
    font-size: 35rpx;
    margin-left: 15px;
    display:inline-block;
    vertical-align:middle;
}
.state{
    width:100%;
    justify-content: space-around;
    padding: 10rpx 0;
}
.stateItem{
    font-size: 30rpx;
    text-align: center;
    display:inline-block;
    width:25%;
    padding:10rpx 0;
}
.option{
    position: relative;
    border-bottom:1px solid #eee;
    font-family:iconfont;
    padding:20rpx 30rpx;
    font-size: 30rpx;
    position:relative;
}

/*订单筛选图标*/
.stateItem .icon{
    background:url(../../images/system/member.png) no-repeat;
    background-size:100rpx;
    height:45rpx;
    width:45rpx;
    margin:0 auto 10rpx auto;
}

.icon-pay .icon{
    
}
.icon-deliver .icon{
    background-position-y:-50rpx;
}
.icon-send .icon{
    background-position-y:-100rpx;
}
.icon-goodsnew .icon{
    background-position-y:-150rpx;
}
.icon-post .icon{
    background-position-y:-200rpx;
}

.option .icon{
    background:url(../../images/system/member.png) no-repeat;
    background-size:120rpx;
    height:60rpx;
    width:60rpx;
    background-position-x:-60rpx;
    display:inline-block;
    vertical-align:middle;
}
.option text{
    vertical-align:middle;
    display:inline-block;
    margin-left:30rpx;
}
.collect .icon{
    
}
.record .icon{
    background-position-y:-55rpx;
}
.address .icon{
    background-position-y:-115rpx;
}
.idea .icon{
    background-position-y:-180rpx;
}
.service .icon{
    background-position-y:-240rpx;
}

.option:after{
    content:'>';
    position:absolute;
    right:50rpx;
    line-height:60rpx;
}